@model MonthlyClaim
@{
    ViewData["Title"] = "Claim Details - Admin View";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card @GetStatusCardClass(Model.Status) text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="card-title mb-1">
                                <i class="fas fa-search me-2"></i>Claim Details - Administrative View
                            </h2>
                            <p class="card-text mb-0">
                                Claim #@Model.ClaimId for @Model.DisplayMonth | Status: @Model.Status
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-light text-dark p-3 rounded">
                                <h5 class="mb-1">Current Status</h5>
                                <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Claim Information -->
        <div class="col-lg-8">
            <!-- Basic Claim Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Claim Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Claim ID:</th>
                                    <td>#@Model.ClaimId</td>
                                </tr>
                                <tr>
                                    <th>Lecturer:</th>
                                    <td>
                                        <strong>@Model.Lecturer?.FullName</strong>
                                        <br>
                                        <small class="text-muted">@Model.Lecturer?.Email</small>
                                        <br>
                                        <small class="text-muted">@Model.Lecturer.LecturerId</small>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Hourly Rate:</th>
                                    <td>R @Model.Lecturer?.HourlyRate</td>
                                </tr>
                                <tr>
                                    <th>Contract Status:</th>
                                    <td>
                                        @if (Model.Lecturer?.IsActive == 1)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Claim Month:</th>
                                    <td>@Model.DisplayMonth</td>
                                </tr>
                                <tr>
                                    <th>Submission Date:</th>
                                    <td>@Model.SubmissionDate.ToString("dd MMMM yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Total Hours:</th>
                                    <td>@Model.TotalHours hours</td>
                                </tr>
                                <tr>
                                    <th>Total Amount:</th>
                                    <td class="fw-bold text-success">R @Model.TotalAmount</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approval Timeline -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Approval Timeline
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.SubmissionDate != null ? "completed" : "")">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Submitted</h6>
                                <p class="text-muted mb-0">@Model.SubmissionDate.ToString("dd MMM yyyy HH:mm")</p>
                            </div>
                        </div>

                        @if (Model.CoordinatorApprovalDate.HasValue)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Coordinator Approved</h6>
                                    <p class="text-muted mb-0">@Model.CoordinatorApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</p>
                                    <p class="mb-0">
                                        <strong>Coordinator:</strong> @Model.Coordinator?.FullName
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.CoordinatorComments))
                                    {
                                        <p class="mb-0 mt-1">
                                            <strong>Notes:</strong> @Model.CoordinatorComments
                                        </p>
                                    }
                                </div>
                            </div>
                        }

                        @if (Model.ManagerApprovalDate.HasValue)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker @(Model.Status == ClaimStatus.ManagerApproved ? "bg-success" : "bg-danger")"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Final Decision - @Model.Status</h6>
                                    <p class="text-muted mb-0">@Model.ManagerApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</p>
                                    <p class="mb-0">
                                        <strong>Manager:</strong> @Model.Manager?.FullName
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.ManagerComments))
                                    {
                                        <p class="mb-0 mt-1">
                                            <strong>Final Notes:</strong> @Model.ManagerComments
                                        </p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Supporting Documents -->
            @if (Model.SupportingDocuments?.Any() == true)
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-alt me-2"></i>Supporting Documents
                            <span class="badge bg-light text-dark ms-2">@Model.SupportingDocuments.Count</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var document in Model.SupportingDocuments)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card document-card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <i class="fas @GetFileIconClass(document.OriginalFileName) me-3 fa-2x text-primary"></i>
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1">@document.OriginalFileName</h6>
                                                    <p class="card-text small text-muted mb-1">
                                                        @document.DocumentType • @document.FileSizeDisplay
                                                    </p>
                                                    <p class="card-text small text-muted mb-2">
                                                        Uploaded: @document.UploadDate.ToString("dd MMM yyyy")
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(document.Description))
                                                    {
                                                        <p class="card-text small mb-2">@document.Description</p>
                                                    }
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-controller="Manager"
                                                           asp-action="DownloadDocument"
                                                           asp-route-documentId="@document.DocumentId"
                                                           class="btn btn-outline-primary">
                                                            <i class="fas fa-download me-1"></i>Download
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar - Information & Actions -->
        <div class="col-lg-4">
            <!-- Processing Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Processing Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless">
                        <tr>
                            <td>Days Since Submission:</td>
                            <td class="text-end">@((DateTime.Now - Model.SubmissionDate).Days) days</td>
                        </tr>
                        @if (Model.CoordinatorApprovalDate.HasValue)
                        {
                            <tr>
                                <td>Coordinator Processing:</td>
                                <td class="text-end">@((Model.CoordinatorApprovalDate.Value - Model.SubmissionDate).Days) days</td>
                            </tr>
                        }
                        @if (Model.ManagerApprovalDate.HasValue)
                        {
                            <tr>
                                <td>Manager Processing:</td>
                                <td class="text-end">@((Model.ManagerApprovalDate.Value - Model.CoordinatorApprovalDate.Value).Days) days</td>
                            </tr>
                            <tr>
                                <td>Total Processing:</td>
                                <td class="text-end fw-bold">@((Model.ManagerApprovalDate.Value - Model.SubmissionDate).Days) days</td>
                            </tr>
                        }
                        <tr>
                            <td>Supporting Documents:</td>
                            <td class="text-end">@(Model.SupportingDocuments?.Count ?? 0)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Claim Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-calculator me-2"></i>Claim Summary
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless">
                        <tr>
                            <td>Hours Claimed:</td>
                            <td class="text-end fw-bold">@Model.TotalHours</td>
                        </tr>
                        <tr>
                            <td>Hourly Rate:</td>
                            <td class="text-end">R @Model.Lecturer?.HourlyRate</td>
                        </tr>
                        <tr>
                            <td>Total Amount:</td>
                            <td class="text-end fw-bold text-success">R @Model.TotalAmount</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="AllClaims" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to All Claims
                        </a>

                        @if (Model.SupportingDocuments?.Any() == true)
                        {
                            <a asp-controller="Manager"
                               asp-action="DownloadAllDocuments"
                               asp-route-claimId="@Model.ClaimId"
                               class="btn btn-outline-success">
                                <i class="fas fa-download me-2"></i>Download All Documents
                            </a>
                        }

                        <a href="javascript:window.print()" class="btn btn-outline-info">
                            <i class="fas fa-print me-2"></i>Print Details
                        </a>

                        <a asp-controller="Admin" asp-action="Reports" class="btn btn-outline-warning">
                            <i class="fas fa-chart-line me-2"></i>View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 3px solid #fff;
    }

    .timeline-content {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .timeline-item.completed .timeline-content {
        background: #e8f5e8;
    }

    .document-card {
        transition: transform 0.2s;
        border-left: 4px solid #0d6efd;
    }

        .document-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}

@functions {
    string GetStatusCardClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.Submitted => "bg-warning",
            _ => "bg-secondary"
        };
    }

    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Draft => "bg-secondary",
            ClaimStatus.Submitted => "bg-warning",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Paid => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetFileIconClass(string fileName)
    {
        if (string.IsNullOrEmpty(fileName))
            return "fa-file";

        var ext = fileName.Contains('.') ? fileName.Substring(fileName.LastIndexOf('.')).ToLower() : "";

        return ext switch
        {
            ".pdf" => "fa-file-pdf",
            ".doc" or ".docx" => "fa-file-word",
            ".xls" or ".xlsx" => "fa-file-excel",
            ".jpg" or ".jpeg" or ".png" or ".gif" => "fa-file-image",
            ".zip" or ".rar" => "fa-file-archive",
            _ => "fa-file",
        };
    }
}