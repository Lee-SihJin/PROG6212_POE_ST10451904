@model CreateUserViewModel
@{
    ViewData["Title"] = "Add New User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Add New User</h6>
                </div>
                <div class="card-body">
                    <!-- Display success/error messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @TempData["WarningMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form method="post" asp-action="CreateUser">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserType"></label>
                                    <select asp-for="UserType" asp-items="Model.UserTypes" class="form-control" id="userTypeSelect">
                                        <option value="">-- Select User Type --</option>
                                    </select>
                                    <span asp-validation-for="UserType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Lecturer Specific Fields -->
                        <div id="lecturerFields" style="display: none;">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber"></label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="HourlyRate"></label>
                                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ContractStartDate"></label>
                                        <input asp-for="ContractStartDate" type="date" class="form-control" />
                                        <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ContractEndDate"></label>
                                        <input asp-for="ContractEndDate" type="date" class="form-control" />
                                        <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Programme Coordinator Specific Field -->
                        <div id="coordinatorFields" style="display: none;">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Department"></label>
                                        <input asp-for="Department" class="form-control" />
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="IsActive"></label>
                            <select asp-for="IsActive" class="form-control">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <hr />

                        <div id="userAccountFields">
                            <div class="form-group">
                                <label asp-for="TemporaryPassword"></label>
                                <input asp-for="TemporaryPassword" class="form-control" type="password" />
                                <span asp-validation-for="TemporaryPassword" class="text-danger"></span>
                                <small class="form-text text-muted">Password must be at least 6 characters long.</small>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create User
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Toggle user type specific fields
            $('#userTypeSelect').change(function () {
                var userType = $(this).val();

                // Hide all specific fields first
                $('#lecturerFields').hide();
                $('#coordinatorFields').hide();

                // Show relevant fields based on user type
                if (userType === '1') { // Lecturer
                    $('#lecturerFields').show();
                } else if (userType === '2') { // ProgrammeCoordinator
                    $('#coordinatorFields').show();
                }
                // AcademicManager (3) doesn't have additional fields
            });

            // Trigger change event on page load
            $('#userTypeSelect').trigger('change');
        });
    </script>
}