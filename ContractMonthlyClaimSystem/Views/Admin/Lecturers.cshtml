@model IEnumerable<ContractMonthlyClaimSystem.Models.Lecturer>
@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Lecturers</h1>
        <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Lecturer
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Lecturer ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Hourly Rate</th>
                                <th>Contract Dates</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr>
                                    <td>@lecturer.LecturerId</td>
                                    <td>@lecturer.FullName</td>
                                    <td>@lecturer.Email</td>
                                    <td>@lecturer.HourlyRate</td>
                                    <td>
                                        @lecturer.ContractStartDate.ToString("dd/MM/yyyy") -
                                        @(lecturer.ContractEndDate?.ToString("dd/MM/yyyy") ?? "Present")
                                    </td>
                                    <td>
                                        <span class="badge @(lecturer.IsActive==1 ? "badge-success" : "badge-secondary")">
                                            @(lecturer.IsActive==1 ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("EditLecturer", new { id = lecturer.LecturerId })"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("ToggleLecturerStatus", new { id = lecturer.LecturerId })"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning" title="@(lecturer.IsActive==1 ? "Deactivate" : "Activate")">
                                                    <i class="fas @(lecturer.IsActive==1 ? "fa-user-slash" : "fa-user-check")"></i>
                                                </button>
                                            </form>
                                            <form method="post" action="@Url.Action("DeleteLecturer", new { id = lecturer.LecturerId })"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this lecturer? This action cannot be undone.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h4>No Lecturers Found</h4>
                    <p class="text-muted">Get started by adding your first lecturer.</p>
                    <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Lecturer
                    </a>
                </div>
            }
        </div>
    </div>
</div>