@model IEnumerable<MonthlyClaim>
@{
    ViewData["Title"] = "All Claims";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="card-title">
                                <i class="fas fa-list-alt me-2"></i>All Claims
                            </h2>
                            <p class="card-text mb-0">
                                Complete overview of all claims in the system
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-light text-dark p-3 rounded">
                                <h5 class="mb-1">Total Claims</h5>
                                <h4 class="text-primary mb-0">@Model.Count()</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="Submitted">Submitted</option>
                                <option value="CoordinatorApproved">Coordinator Approved</option>
                                <option value="ManagerApproved">Manager Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="month" class="form-label">Claim Month</label>
                            <input type="month" class="form-control" id="month" name="month" value="@ViewBag.CurrentMonth">
                        </div>
                        <div class="col-md-3">
                            <label for="lecturer" class="form-label">Lecturer</label>
                            <input type="text" class="form-control" id="lecturer" name="lecturer" value="@ViewBag.CurrentLecturer" placeholder="Search lecturer...">
                        </div>
                        <div class="col-md-3">
                            <label for="coordinator" class="form-label">Coordinator</label>
                            <input type="text" class="form-control" id="coordinator" name="coordinator" value="@ViewBag.CurrentCoordinator" placeholder="Search coordinator...">
                        </div>
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter me-2"></i>Apply Filters
                                </button>
                                <a asp-action="AllClaims" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Clear Filters
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Export Controls -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-download me-2"></i>Export Reports
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="ExportClaimsReport" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-md-3">
                            <label for="reportType" class="form-label">Report Type</label>
                            <select class="form-select" id="reportType" name="reportType" required>
                                <option value="detailed">Detailed Claims Report</option>
                                <option value="summary">Monthly Summary Report</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="format" class="form-label">Format</label>
                            <select class="form-select" id="format" name="format" required>
                                <option value="csv">CSV</option>
                                <option value="excel">Excel</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status Filter</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="Submitted">Submitted</option>
                                <option value="CoordinatorApproved">Coordinator Approved</option>
                                <option value="ManagerApproved">Manager Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-file-export me-2"></i>Export Report
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>Claims Overview
                        <span class="badge bg-light text-dark ms-2">@Model.Count()</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Claim Month</th>
                                        <th>Status</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Submission Date</th>
                                        <th>Coordinator</th>
                                        <th>Manager</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@claim.ClaimId</strong>
                                            </td>
                                            <td>
                                                <strong>@claim.Lecturer?.FullName</strong>
                                                <br>
                                                <small class="text-muted">@claim.Lecturer.LecturerId</small>
                                            </td>
                                            <td>@claim.DisplayMonth</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(claim.Status)">
                                                    @claim.Status
                                                </span>
                                            </td>
                                            <td>@claim.TotalHours</td>
                                            <td class="fw-bold @(claim.Status == ClaimStatus.ManagerApproved ? "text-success" : claim.Status == ClaimStatus.Rejected ? "text-danger" : "text-dark")">
                                                R @claim.TotalAmount
                                            </td>
                                            <td>
                                                <small>@claim.SubmissionDate.ToString("dd MMM yyyy")</small>
                                                <br>
                                                <small class="text-muted">@claim.SubmissionDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (claim.Coordinator != null)
                                                {
                                                    <span>@claim.Coordinator.FullName</span>
                                                    <br>
                                                    <small class="text-muted">@claim.CoordinatorApprovalDate?.ToString("dd MMM")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (claim.Manager != null)
                                                {
                                                    <span>@claim.Manager.FullName</span>
                                                    <br>
                                                    <small class="text-muted">@claim.ManagerApprovalDate?.ToString("dd MMM")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group-vertical btn-group-sm" role="group">
                                                    <a asp-controller="Admin"
                                                       asp-action="ClaimDetails"
                                                       asp-route-id="@claim.ClaimId"
                                                       class="btn btn-outline-primary mb-1">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    @if (claim.SupportingDocuments?.Any() == true)
                                                    {
                                                        <a asp-controller="Manager"
                                                           asp-action="DownloadAllDocuments"
                                                           asp-route-claimId="@claim.ClaimId"
                                                           class="btn btn-outline-success">
                                                            <i class="fas fa-download me-1"></i>Documents
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Statistics -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count(m => m.Status == ClaimStatus.ManagerApproved)</h4>
                                        <p class="mb-0">Approved</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count(m => m.Status == ClaimStatus.Rejected)</h4>
                                        <p class="mb-0">Rejected</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h4>@Model.Count(m => m.Status == ClaimStatus.CoordinatorApproved)</h4>
                                        <p class="mb-0">Pending</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h4>R @Model.Where(m => m.Status == ClaimStatus.ManagerApproved).Sum(m => m.TotalAmount)</h4>
                                        <p class="mb-0">Total Approved</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No Claims Found</h4>
                            <p class="text-muted">No claims match the current filter criteria.</p>
                            <a asp-action="AllClaims" class="btn btn-primary">
                                <i class="fas fa-times me-2"></i>Clear Filters
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <div class="btn-group" role="group">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set current filter values
            const urlParams = new URLSearchParams(window.location.search);
            document.getElementById('status').value = urlParams.get('status') || '';
            // month, lecturer, and coordinator are already set via ViewBag
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Draft => "bg-secondary",
            ClaimStatus.Submitted => "bg-warning",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Paid => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}